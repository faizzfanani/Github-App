<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="1dp"
    android:layout_marginHorizontal="3dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/item_repo_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_toStartOf="@id/container_repo_language"
            android:fontFamily="@font/quicksand_bold"
            android:textSize="16sp" />
        <androidx.cardview.widget.CardView
            android:id="@+id/container_repo_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardElevation="3dp"
            android:layout_margin="2dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true">
            <TextView
                android:id="@+id/item_repo_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/quicksand_bold"
                android:layout_margin="5dp"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/item_repo_fullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_repo_name"
            android:layout_centerHorizontal="true"
            android:layout_toStartOf="@id/container_repo_language"
            android:fontFamily="@font/quicksand_medium"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/item_repo_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_regular"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/item_repo_fullName"/>
        <ImageView
            android:id="@+id/icon_star"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_star_outlined"
            android:layout_alignParentStart="true"
            android:layout_marginTop="32dp"
            android:layout_below="@id/item_repo_desc"
            tools:ignore="ContentDescription" />
        <TextView
            android:id="@+id/item_repo_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_medium"
            android:layout_marginStart="5dp"
            android:textSize="14sp"
            android:layout_toEndOf="@id/icon_star"
            android:layout_marginTop="32dp"
            android:layout_alignBottom="@id/icon_star"/>
        <TextView
            android:id="@+id/item_repo_lastUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_regular"
            android:textSize="12sp"
            android:layout_marginHorizontal="5dp"
            android:textAlignment="textEnd"
            android:layout_toEndOf="@id/item_repo_rating"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="32dp"
            android:layout_below="@id/item_repo_desc"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
